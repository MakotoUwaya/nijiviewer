{
  "name": "nextra-docs",
  "version": "0.0.1",
  "description": "OiChan Docs, Powered by Nextra",
  "type": "module",
  "private": true,
  "scripts": {
    "dev": "next dev --port 3001 --turbopack",
    "build": "next build",
    "postbuild": "pagefind --site .next/server/app --output-path public/_pagefind",
    "start": "next start",
    "lint": "biome lint ./ --files-ignore-unknown=true",
    "lint:fix": "biome check --apply ./ --files-ignore-unknown=true",
    "format": "biome format ./ --write"
  },
  "dependencies": {
    "@microsoft/clarity": "1.0.2",
    "@next/third-parties": "16.1.6",
    "@tailwindcss/postcss": "4.1.18",
    "next": "16.1.6",
    "nextra": "4.6.1",
    "nextra-theme-docs": "4.6.1",
    "react": "19.2.4",
    "react-dom": "19.2.4",
    "tailwindcss": "4.1.18",
    "ui": "*"
  },
  "devDependencies": {
    "@types/node": "24.10.9",
    "@types/react": "19.2.10",
    "@types/react-dom": "19.2.3",
    "pagefind": "1.4.0",
    "tsconfig": "workspace:*",
    "typescript": "5.9.3"
  }
}